@{
    ViewBag.Title = "GridTest";
}

<h2>GridTest</h2>


<div id="example">
    <div id="grid"></div>
    <script>
        //Kendo UI 建立資料來源物件.
        var sharedDataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: "$apiHost$",
                    type: "get",
                    dataType: "json"
                }
            },
            pageSize: 20
        });

        $(document).ready(function () {
            $("#grid").kendoGrid({
                dataSource: sharedDataSource,
                height: 550,
                groupable: true,
                sortable: true,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5
                },
                $jsonColumns$
            });
        });
    </script>
</div>

<style type="text/css">
    .customer-photo {
        display: inline-block;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-size: 32px 35px;
        background-position: center center;
        vertical-align: middle;
        line-height: 32px;
        box-shadow: inset 0 0 1px #999, inset 0 0 10px rgba(0,0,0,.2);
        margin-left: 5px;
    }

    .customer-name {
        display: inline-block;
        vertical-align: middle;
        line-height: 32px;
        padding-left: 3px;
    }
</style>
